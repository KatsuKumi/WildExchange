{% extends 'base.html.twig' %}

{% block title %}Questions{% endblock %}

    {% block style %}
        <link href="{{ asset('bootstrap-tagsinput.css') }}" rel="stylesheet" type="text/css" media="screen">
        <style>
            body {
                background: url('{{ asset('questions.jpg') }}') no-repeat center fixed;
                background-size: cover;
            }
        </style>
    {% endblock %}

{% block body %}

    <div class="container">
        <div class="row">

            <section class="content paddingtop">

                <div class="col-md-12">
                    <div class="panel panel-default panelbg">
                        <h1>Questions</h1>
                        <div class="panel-body">
                            <div class="pull-right">
                                <div class="btn-group">
                                    <a href="{{ path('ajoutpage', {'tag': tag}) }}">
                                        <button type="button" class="btn btn-default btn-filter" data-target="all">Ajouter
                                        une question
                                    </button>
                                    </a>
                                </div>
                            </div>
                            <div class="table-container">
                                <table class="table table-filter">
                                    <tbody>
                                    {% for question in questions %}

                                        <tr data-status="Resolu">
                                            <td>

                                                <div class="ckbox">
                                                    <ul>
                                                        <li>
                                                        <span class="input-group-btn">
                                                                <button type="button" class="btn btn-danger btn-number" data-type="minus" data-field="quant[2]">
                                                                     <span class="glyphicon glyphicon-minus"></span>
                                                                </button>
                                                        </span>
                                                        </li>
                                                        <li>
                                                            <span>132</span>
                                                        </li>
                                                        <li>
                                                        <span class="input-group-btn">
                                                            <button type="button" class="btn btn-success btn-number" data-type="plus" data-field="quant[2]">
                                                                <span class="glyphicon glyphicon-plus"></span>
                                                            </button>
                                                        </span>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </td>

                                            <td>
                                            </td>
                                            <td>
                                                <div class="media">
                                                    <a href="#" class="pull-left">
                                                        <img src="{{ asset(question.createur.avatarurl) }}"
                                                             class="avatar-32x">
                                                    </a>
                                                    <div class="media-body">
                                                        <span class="media-meta pull-right">{{ question.date|date(' d-m-Y') }}</span>
                                                        <a href="{{ path('reponsepage')}}">
                                                        <h4 class="title">
                                                            {{ question.titre }}
                                                            <span class="pull-right resolu">(RÃ©solu)</span>
                                                        </h4>
                                                        </a>
                                                        <p class="summary">{{ question.contenu }}</p>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="content-footer">
                        <p>
                            En voir plus
                        </p>
                    </div>
                </div>
            </section>

        </div>
    </div>
{% endblock %}

{% block js %}
    <script>
        $(window).scroll(function () {

            if ($(this).scrollTop() == 0) {
                $('.navbar-defaultt').addClass('x-navbar-fixed-top');
            }
            else if ($('.navbar-defaultt').hasClass('x-navbar-fixed-top')) {
                $('.navbar-defaultt').removeClass('x-navbar-fixed-top');
            }

        });

        if ($(this).scrollTop() == 0) {
            $('.navbar-defaultt').addClass('x-navbar-fixed-top');
        }
        else if ($('.navbar-defaultt').hasClass('x-navbar-fixed-top')) {
            $('.navbar-defaultt').removeClass('x-navbar-fixed-top');
        }
    </script>
{% endblock %}